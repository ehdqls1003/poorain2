<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로 그 인"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
    />

    <EditText
        android:id="@+id/inputid"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="아이디"
        android:maxLength="20"
        android:maxLines="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        app:layout_constraintTop_toBottomOf="@+id/login"
        />

    <EditText
        android:id="@+id/inputpw"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="비밀번호"
        android:maxLength="20"
        android:maxLines="1"
        android:inputType="textPassword"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        app:layout_constraintTop_toBottomOf="@+id/inputid"
        />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="자동 로그인"
        android:id="@+id/check1"
        app:layout_constraintTop_toBottomOf="@id/inputpw"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="50dp"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/findid"

        app:layout_constraintTop_toBottomOf="@+id/check1"
        app:layout_constraintRight_toLeftOf="@id/middle"
        app:layout_constraintLeft_toLeftOf="parent"

        android:layout_marginLeft="45dp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디 찾기"
        />
    <TextView
        android:id="@+id/middle"
        app:layout_constraintLeft_toRightOf="@id/findid"
        app:layout_constraintRight_toLeftOf="@id/findpw"

        app:layout_constraintTop_toBottomOf="@+id/check1"

        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="|"
        />
    <TextView
        android:id="@+id/findpw"
        app:layout_constraintLeft_toRightOf="@id/middle"
        app:layout_constraintTop_toBottomOf="@+id/check1"
        app:layout_constraintRight_toRightOf="parent"

        android:layout_marginTop="20dp"
        android:layout_marginRight="45dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호 찾기"
        />


    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="20dp"
        android:text="로 그 인"
        app:layout_constraintTop_toBottomOf="@id/findid"
        android:layout_marginTop="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:id="@+id/loginbutton"
        />

    <View
        android:id="@+id/line1"
        app:layout_constraintTop_toBottomOf="@id/loginbutton"

        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"

        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="20dp"
        android:text="회 원 가 입"
        app:layout_constraintTop_toBottomOf="@id/line1"
        android:layout_marginTop="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:id="@+id/signup"
        />


</androidx.constraintlayout.widget.ConstraintLayout>